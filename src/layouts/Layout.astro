---
import '@fontsource/poppins/400.css'
import '@fontsource/poppins/500.css'
import '@fontsource/poppins/600.css'
import '@fontsource/poppins/700.css'
import './src/styles/global.css'
const {title = 'Hamburguesas Bob'} = Astro.props


---

<!doctype html>
<html lang="es">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/Restaurante.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body class="bg">
		<slot />
	</body>
</html>

<style>
	html,
	body {
		margin: 0;
		width: 100%;
		height: 100%;
	}
</style>

<script>
document.addEventListener('DOMContentLoaded', () => {
  const menuBtn = document.getElementById('menu-btn');
  const mobileMenu = document.getElementById('mobile-menu');
  const navLinks = document.querySelectorAll('.nav-link');

  // Mostrar/ocultar menú móvil
  if (menuBtn && mobileMenu) {
    menuBtn.addEventListener('click', () => {
      mobileMenu.classList.toggle('hidden');
    });
  }

  // Agregar animación de desplazamiento suave
  navLinks.forEach(link => {
    link.addEventListener('click', (event) => {
      event.preventDefault();

      const href = link.getAttribute('href'); 
      
      // Validar que href existe y tiene el formato correcto
      if (!href || !href.startsWith('/#')) return;

      const targetId = href.substring(2); // Quita '/#'
      const targetSection = document.getElementById(targetId);

      // Validar que la sección existe antes de hacer scroll
      if (targetSection) {
        targetSection.scrollIntoView({ behavior: 'smooth' });
      } else {
        console.warn(`No se encontró la sección con ID: ${targetId}`);
      }
    });
  });
});

  </script>